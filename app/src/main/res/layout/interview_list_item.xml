<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bs_listview_item_bg1" >
   
    
        
    <LinearLayout 
        android:id="@+id/car_number_top"
        android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:layout_alignParentTop="true"
        android:layout_marginTop="10dip"
        >
    <TextView
       android:id="@+id/position_info"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textSize="18sp"
       android:textColor="#414042"
       android:text="11" />
    
    
    </LinearLayout >
    

    <LinearLayout
        android:id="@+id/company_name_middle"
        android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:layout_below="@+id/car_number_top"
        android:layout_marginTop="10dip"
    >
    <TextView
       android:id="@+id/company_name"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textSize="18sp"
       android:textColor="#414042"
       android:text="33" />
    
    </LinearLayout>
    
      <LinearLayout  
          android:id="@+id/date_middle"
        android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	     android:layout_below="@+id/company_name_middle"
	    android:orientation="horizontal"
        android:layout_marginTop="10dip"
      >
     <TextView
       android:id="@+id/address"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textSize="18sp"
       android:textColor="#414042"
       android:text="44" />    
       
     </LinearLayout >
    

    
        
       <LinearLayout
        android:id="@+id/car_number_buttom"
        android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/date_middle"
	    android:orientation="horizontal"
        android:layout_marginTop="10dip"
        >
       
        <ImageView
       android:id="@+id/listview_content_tag"
       android:layout_width="wrap_content"
       android:layout_height="fill_parent"
       android:gravity="center_vertical"
       android:scaleType="centerInside"
       android:layout_marginLeft="1dip"
       android:src="@drawable/bs_listview_item_info" />
      
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginLeft="5dip"
            android:text="点击查看地图"
            android:textColor="@color/BS_LIST_ITEM_INFO"
            android:textSize="16sp" />
        </LinearLayout>


</RelativeLayout>
