<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/tools_white"
    android:orientation="vertical" >

    <include layout="@layout/pubtitle"/>

    
    
 

    <ScrollView
        android:layout_width="fill_parent"
	    android:layout_height="fill_parent" >

    <LinearLayout
        android:id="@+id/headView"
        android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:background="@color/tools_white"
	    android:orientation="vertical"
	    android:padding="16.7dip" >
        
         <TextView
            android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:singleLine="true"
			android:textSize="16sp"
			android:textColor="#b3b3b3"
			android:layout_marginBottom="10dip"
			android:text="姓名：" />
        
        <EditText
            android:id="@+id/name"
            style="@style/comment_edittext_style"
            android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:textSize="16sp"
			android:textColor="#b3b3b3"
			android:minLines="1"
	    	android:hint="在这里添加姓名" />
        
        <TextView
            android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:singleLine="true"
			android:textSize="16sp"
			android:textColor="#b3b3b3"
			android:layout_marginBottom="10dip"
			android:text="工作年限：" />
        
         <Spinner android:id="@+id/nianxian"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:entries="@array/nianxians"></Spinner>
        
         <TextView
            android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:singleLine="true"
			android:textSize="16sp"
			android:textColor="#b3b3b3"
			android:layout_marginBottom="10dip"
			android:text="性别：" />
        
       <Spinner android:id="@+id/sex"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:entries="@array/sexs"></Spinner>
        
         <TextView
            android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:singleLine="true"
			android:textSize="16sp"
			android:textColor="#b3b3b3"
			android:layout_marginBottom="10dip"
			android:text="年龄：" />
        
        <EditText
            android:id="@+id/age"
            style="@style/comment_edittext_style"
            android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:textSize="16sp"
			android:textColor="#b3b3b3"
			android:minLines="1"
			android:inputType="number"
	    	android:hint="在这里添加年龄" />
        
         <TextView
            android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:singleLine="true"
			android:textSize="16sp"
			android:textColor="#b3b3b3"
			android:layout_marginBottom="10dip"
			android:text="婚姻：" />
        
       <Spinner android:id="@+id/hunying"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:entries="@array/hunyings"></Spinner>
        
       
       <TextView
            android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:singleLine="true"
			android:textSize="16sp"
			android:textColor="#b3b3b3"
			android:layout_marginBottom="10dip"
			android:text="政治面貌：" />
        
       <Spinner android:id="@+id/zhengzhi"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:entries="@array/zhengzhis"></Spinner>
       
         <TextView
            android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:singleLine="true"
			android:textSize="16sp"
			android:textColor="#b3b3b3"
			android:layout_marginBottom="10dip"
			android:text="居住地：" />
        
        <EditText
            android:id="@+id/address"
            style="@style/comment_edittext_style"
            android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:textSize="16sp"
			android:textColor="#b3b3b3"
			android:minLines="1"
	    	android:hint="在这里添加居住地" />
        
        
         <TextView
            android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:singleLine="true"
			android:textSize="16sp"
			android:textColor="#b3b3b3"
			android:layout_marginBottom="10dip"
			android:text="联系方式：" />
        
        <EditText
            android:id="@+id/lianxi"
            style="@style/comment_edittext_style"
            android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:textSize="16sp"
			android:textColor="#b3b3b3"
			android:minLines="1"
	    	android:hint="在这里添加联系方式" />
        
        
         <TextView
            android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:singleLine="true"
			android:textSize="16sp"
			android:textColor="#b3b3b3"
			android:layout_marginBottom="10dip"
			android:text="学历：" />
        
        <Spinner android:id="@+id/xueli"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:entries="@array/xuelis"></Spinner>
        
         <TextView
            android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:singleLine="true"
			android:textSize="16sp"
			android:textColor="#b3b3b3"
			android:layout_marginBottom="10dip"
			android:text="学校：" />
        
        <EditText
            android:id="@+id/xuexiao"
            style="@style/comment_edittext_style"
            android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:textSize="16sp"
			android:textColor="#b3b3b3"
			android:minLines="1"
	    	android:hint="在这里添加学校" />
        
        <TextView
            android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:singleLine="true"
			android:textSize="16sp"
			android:textColor="#b3b3b3"
			android:layout_marginBottom="10dip"
			android:text="专业：" />
        
        <EditText
            android:id="@+id/zhuanye"
            style="@style/comment_edittext_style"
            android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:textSize="16sp"
			android:textColor="#b3b3b3"
			android:minLines="1"
	    	android:hint="在这里添加专业" />
        
         <TextView
            android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:singleLine="true"
			android:textSize="16sp"
			android:textColor="#b3b3b3"
			android:layout_marginBottom="10dip"
			android:text="月薪：" />
        
        <Spinner android:id="@+id/yuexin"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:entries="@array/yuexins"></Spinner>
        
        
        
        
        <TextView
            android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:singleLine="true"
			android:textSize="16sp"
			android:textColor="#b3b3b3"
			android:layout_marginBottom="10dip"
			android:text="自我评价：" />
        
        
        
        <EditText
            android:id="@+id/ziwopingjia"
            style="@style/comment_edittext_style"
            android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:textSize="16sp"
			android:textColor="#b3b3b3"
			android:minLines="3"
	    	android:hint="在这里添加自我评价" />
        
        
        <TextView
            android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:singleLine="true"
			android:textSize="16sp"
			android:textColor="#b3b3b3"
			android:layout_marginBottom="10dip"
			android:text="工作经验：" />
        
        <EditText
            android:id="@+id/gongzuojingyan"
            style="@style/comment_edittext_style"
            android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:textSize="16sp"
			android:textColor="#b3b3b3"
			android:minLines="3"
	    	android:hint="在这里添加工作经验" />
        
      <LinearLayout
            android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:orientation="horizontal"
	    	android:layout_marginBottom="20dip" >
	    	
	    	
            <TextView
                android:id="@+id/base_submit"
                android:layout_height="34dip"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginTop="20dip"
                android:textSize="16sp"
                android:textColor="#39b54a"
                android:gravity="center"
                android:background="@drawable/checkout_status_button"
                android:padding="0dip"
                android:text="提交" />
            
            <TextView
                android:id="@+id/base_clear"
                android:layout_height="34dip"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginTop="20dip"
                android:textSize="16sp"
                android:textColor="#39b54a"
                android:gravity="center"
                android:background="@drawable/checkout_status_button"
                android:padding="0dip"
                android:text="重置" />
          
        </LinearLayout>
 
 
      </LinearLayout>


    </ScrollView>

    
            
</LinearLayout>
